<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings.UserProfileActivity">
    <include
        android:id="@+id/barSatus"
        layout="@layout/bar_layout"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/UserProfilePicture"
            android:transitionName="image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/empty_user"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/UploadPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/photo_camera"
            app:tint="@color/white"
            android:elevation="1dp"
            android:layout_alignBottom="@+id/UserProfilePicture"
            android:layout_alignEnd="@+id/UserProfilePicture"
            android:backgroundTint="@color/purple_500"
            android:layout_alignRight="@+id/UserProfilePicture" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btn_editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/person"
                app:tint="@color/purple_500" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                android:orientation="vertical"
                android:paddingLeft="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#292727"
                        android:text="Name"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit"
                        android:background="@android:color/transparent"
                        app:tint="@color/purple_500" />
                </LinearLayout>
                <TextView
                    android:id="@+id/ProfileUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/black"
                    android:text="@string/username"/>
                <TextView
                    android:id="@+id/ProfileAboutBelowName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:text="@string/username"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4E6E6E6"/>
        <LinearLayout
            android:id="@+id/btn_editAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/info"
                app:tint="@color/purple_500" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                android:orientation="vertical"
                android:paddingLeft="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#292727"
                        android:text="About"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit"
                        android:background="@android:color/transparent"
                        app:tint="@color/purple_500" />
                </LinearLayout>
                <TextView
                    android:id="@+id/ProfileAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/black"
                    android:text="@string/About"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4E6E6E6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/email"
                app:tint="@color/purple_500" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                android:orientation="vertical"
                android:paddingLeft="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#292727"
                        android:text="@string/Email"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/ProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/black"
                    android:text="@string/userEmail"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4E6E6E6"/>

    </LinearLayout>

</LinearLayout>