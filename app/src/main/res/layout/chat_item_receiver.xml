<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/RelativeText"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/show_Message"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Hello"
            android:textSize="18dp"
            android:padding="8dp"
            android:background="@drawable/background_item_receiver"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_item_receiver"
            android:layout_marginLeft="155dp"
            android:paddingLeft="2dp"
            android:layout_alignBottom="@id/show_Message"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TimeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="11:50"
                android:textSize="8dp"
                android:padding="8dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/is_Seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="11:50"
                android:textSize="8dp"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RelativeImage"
        android:layout_below="@id/RelativeText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:visibility="gone">
    <ImageView
        android:id="@+id/Show_Image"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:background="@drawable/background_item_receiver"
        android:src="@drawable/empty_user"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_receiver"
        android:layout_marginLeft="155dp"
        android:paddingLeft="2dp"
        android:layout_alignBottom="@id/Show_Image"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TimeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="11:50"
            android:textSize="8dp"
            android:padding="8dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/is_SeenImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="11:50"
            android:textSize="8dp"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>