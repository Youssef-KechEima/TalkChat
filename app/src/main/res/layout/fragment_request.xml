<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.RequestFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RequestRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/Request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you don't have a friend Request right now "
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ConnectionRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There no network connection right now"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center_horizontal" />
        <ImageButton
            android:id="@+id/RefrechRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/refresh"
            android:background="@android:color/transparent"
            android:layout_marginTop="20dp"
            app:tint="@color/purple_500" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ProgressBarRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="300dp"
        android:indeterminateTint="@color/purple_500"
        android:indeterminateTintMode="src_in"/>


</RelativeLayout>